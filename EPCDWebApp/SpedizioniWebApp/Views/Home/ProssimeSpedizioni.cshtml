@model List<Spedizione>

@{
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Id Cliente</th>
            <th>Data di spedizione</th>
            <th>Consegna prevista</th>
            <th>Destinazione</th>
            <th>Indirizzo</th>
            <th>Costo di spedizione</th>
            <th>Peso (kg)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var spedizione in Model)
        {
            <tr>
                <td>@spedizione.SpedizioneId</td>
                <td>@spedizione.ClienteId</td>
                <td>@spedizione.DataSpedizione</td>
                <td>@spedizione.DataConsegna</td>
                <td>@spedizione.CittaDestinataria</td>
                <td>@spedizione.Indirizzo</td>
                <td>@spedizione.CostoSpedizione &euro;</td>
                <td>@spedizione.Peso</td>
                <td><a class="btn btn-dark fw-bold" asp-controller="Home" asp-action="RegistraAggiornamento" asp-route-id="@spedizione.SpedizioneId">Inserisci aggiornamento</a></td>
            </tr>
        }
    </tbody>
</table>