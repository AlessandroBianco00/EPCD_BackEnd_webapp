@model Azienda

@{
}

<h1 class="text-center fw-bold red-text">Aggiungi un nuovo cliente</h1>

<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-center">
            <form class="form-FPA" asp-action="FormAzienda">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <p class="title-FPA">Aggiungi Azienda</p>
                <p class="message-FPA"></p>
                <label class="label-FPA">
                    <input asp-for="RagioneSociale" class="input-FPA" type="text" placeholder="" required="">
                    <span>Ragione sociale</span>
                    <span asp-validation-for="RagioneSociale" class="text-danger"></span>
                </label>

                <label class="label-FPA">
                    <input asp-for="PartitaIva" class="input-FPA" type="text" placeholder="" required="">
                    <span>Partita IVA</span>
                    <span asp-validation-for="PartitaIva" class="text-danger"></span>
                </label>

                <label class="label-FPA">
                    <input asp-for="Email" class="input-FPA" type="email" placeholder="" required="">
                    <span>Email</span>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </label>

                <label class="label-FPA">
                    <input asp-for="Citta" class="input-FPA" type="text" placeholder="" required="">
                    <span>Città</span>
                    <span asp-validation-for="Citta" class="text-danger"></span>
                </label>
                <input type="submit" value="Crea" class="btn btn-primary submit-FPA fw-bold" />
                <button type="button" asp-action="Index" class="btn btn-secondary fw-bold border-button">Torna alla home</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}